<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    style="@style/match_match"
    android:id="@+id/editor_note_fragment">

    <ScrollView
        style="@style/match_match">

        <LinearLayout
            android:paddingTop="@dimen/padding_edit_fragment"
            android:paddingBottom="@dimen/padding_edit_fragment"
            android:orientation="vertical"
            style="@style/match_wrap">

            <EditText
                android:id="@+id/title_edit_view"
                android:inputType="textMultiLine"
                android:hint="@string/title_edit_hint"
                android:autofillHints="@string/title_edit_hint"
                style="@style/edit_title"/>

            <TextView
                style="@style/underline"/>

            <EditText
                android:id="@+id/description_edit_view"
                android:inputType="textMultiLine"
                style="@style/edit_description"
                android:hint="@string/description_edit_hint"
                android:autofillHints="@string/description_edit_hint" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>