<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/match_match"
    android:id="@+id/notes_fragment">

    <fragment
        android:id="@+id/recycler_fragment_notes_fragment"
        android:name="ua.notky.notes.gui.widgets.RecyclerViewFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout="@layout/recycler_fragment" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:contentDescription="@string/fab_text"
        app:borderWidth="@dimen/border_fab"
        style="@style/fab"/>

</RelativeLayout>