<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    style="@style/main"
    tools:context=".gui.MainActivity">

    <include layout="@layout/toolbar"/>

    <ProgressBar
        android:id="@+id/horizontal_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/horizontal_progress_bar"
        android:layout_below="@+id/toolbar"
        android:backgroundTint="@color/colorPrimary"
        android:foregroundTint="@color/colorSecondary"
        android:progressTint="@color/colorSecondaryVariant"
        android:visibility="invisible"
        style="?android:attr/progressBarStyleHorizontal"/>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/nav_host_fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/horizontal_progress_bar"
        app:defaultNavHost="true"
        app:navGraph="@navigation/nav_graph">
    </androidx.fragment.app.FragmentContainerView>


    <RelativeLayout
        android:id="@+id/progressbar_view"
        android:visibility="invisible"
        style="@style/progress_bar_view">

        <ProgressBar
            android:id="@+id/progress_bar_circle"
            android:layout_centerInParent="true"
            style="@style/circle_progress_bar"/>

        <TextView
            android:id="@+id/not_connection"
            android:layout_centerInParent="true"
            android:visibility="invisible"
            style="@style/not_conection"/>
    </RelativeLayout>

</RelativeLayout>