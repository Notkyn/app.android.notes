<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="text">
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="match_match" parent="text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="match_wrap" parent="match_match">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="wrap_wrap" parent="text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="main" parent="match_match">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="underline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_underline</item>
        <item name="android:layout_marginTop">@dimen/margin_underline</item>
        <item name="android:layout_marginBottom">@dimen/margin_underline</item>
        <item name="android:background">@color/grey</item>
    </style>

    <style name="progress_bar_view" parent="match_match">
        <item name="android:background">@color/colorPrimaryVariant</item>
    </style>

    <style name="circle_progress_bar">
        <item name="android:layout_width">@dimen/progress_bar</item>
        <item name="android:layout_height">@dimen/progress_bar</item>
        <item name="android:indeterminateTint">@color/colorSecondaryVariant</item>
    </style>

    <style name="not_connection" parent="wrap_wrap">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_big</item>
        <item name="android:text">@string/not_connection</item>
    </style>

    <style name="edit_input" parent="match_wrap">
        <item name="android:layout_marginStart">@dimen/margin_editor_input</item>
        <item name="android:layout_marginEnd">@dimen/margin_editor_input</item>
        <item name="android:layout_marginTop">@dimen/margin_top_editor_input</item>
        <item name="android:paddingStart">@dimen/padding_editor_input</item>
        <item name="android:paddingEnd">@dimen/padding_editor_input</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/grey</item>
    </style>

    <style name="edit_title" parent="edit_input">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="edit_description" parent="edit_input">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="fab" parent="wrap_wrap">
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginEnd">@dimen/margin_fab</item>
        <item name="android:layout_marginBottom">@dimen/margin_fab</item>
        <item name="android:tint">@color/colorPrimary</item>
        <item name="android:backgroundTint">@color/colorSecondaryVariant</item>
        <item name="android:src">@android:drawable/ic_input_add</item>
    </style>

    <style name="item" parent="match_wrap">
        <item name="android:background">@color/colorPrimaryVariant</item>
        <item name="android:layout_marginStart">@dimen/margin_item</item>
        <item name="android:layout_marginEnd">@dimen/margin_item</item>
        <item name="android:layout_marginTop">@dimen/margin_item</item>
        <item name="android:layout_marginBottom">@dimen/margin_bottom_item</item>
        <item name="android:paddingStart">@dimen/padding_horizontal_item</item>
        <item name="android:paddingEnd">@dimen/padding_horizontal_item</item>
        <item name="android:paddingTop">@dimen/padding_vertical_item</item>
        <item name="android:paddingBottom">@dimen/padding_vertical_item</item>
    </style>

    <style name="item_title" parent="match_wrap">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="item_description" parent="item_title">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="item_date" parent="item_title">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorSecondaryVariant</item>
    </style>

    <style name="toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="toolbar_arrow">
        <item name="android:background">@drawable/ic_arrow_back</item>
        <item name="android:layout_width">@dimen/toolbar_btn</item>
        <item name="android:layout_height">@dimen/toolbar_btn</item>
    </style>

    <style name="toolbar_save" parent="text">
        <item name="android:background">@drawable/save_btn</item>
        <item name="android:text">@string/save</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:layout_width">@dimen/width_save</item>
        <item name="android:layout_height">@dimen/toolbar_btn</item>
        <item name="android:layout_marginEnd">@dimen/margin_btn</item>
    </style>

    <style name="toolbar_search">
        <item name="android:layout_width">@dimen/toolbar_btn</item>
        <item name="android:layout_height">@dimen/toolbar_btn</item>
        <item name="android:background">@drawable/ic_search</item>
        <item name="android:layout_marginEnd">@dimen/margin_btn</item>
    </style>
</resources>