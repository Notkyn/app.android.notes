<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="match_match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="match_wrap" parent="match_match">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="text">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>



    <style name="item" parent="match_wrap">
        <item name="android:background">@drawable/item_background</item>
    </style>

    <style name="text.item" parent="match_wrap">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="text.item.title">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text.item.description">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="text.item.data">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">end</item>
    </style>

</resources>